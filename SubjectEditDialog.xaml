<Window x:Class="rTRIZBD4.SubjectEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование предмета" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBlock Text="Название предмета:" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="NameTextBox" FontSize="16" Margin="0,0,0,20"/>

        <Button Content="Сохранить" Click="SaveButton_Click" 
                HorizontalAlignment="Center" Padding="10,5" Width="100"/>
    </StackPanel>
</Window>
