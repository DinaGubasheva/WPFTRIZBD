<Window x:Class="rTRIZBD4.OrganizerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование организатора" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="ФИО организатора:"/>
        <TextBox x:Name="NameTextBox" Margin="0,5,0,10" FontSize="16"/>

        <Button Content="Сохранить" Click="SaveButton_Click" 
                HorizontalAlignment="Center" Padding="10,5"/>
    </StackPanel>
</Window>
